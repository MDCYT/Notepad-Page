<div class="container p-4">
    <div class="row">

        {{#each blocs}}
           <div class="col-md-3">
               <div class="card text-center">
                   <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3><br>
                        <p class="m-2">
                            {{description}}
                        </p><br>
                        <p class="m-2">
                            {{text}}
                        </p><br>
                        <p class="m-2">
                            {{timeago created_at}}
                        </p><br>
                        <a href="" class="btn btn-danger">Borrar Bloc</a>
                        <a href="" class="btn btn-secondary">Editar Bloc</a>
                   </div>
               </div>
          </div>
        {{/each}}

    </div>
</div>