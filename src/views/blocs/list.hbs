<div class="container p-4">
    <div class="row">

        {{#each blocs}}
           <div class="col-md-3">
               <div class="card text-center">
                   <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3><br>
                        <p class="m-2">
                            {{description}}
                        </p><br>
                        <p class="m-2">
                            {{text}}
                        </p><br>
                        <p class="m-2">
                            {{timeago created_at}}
                        </p><br>
                        <a href="/blocs/delete/{{id}}" class="btn btn-danger">Borrar Nota</a>
                        <a href="/blocs/edit/{{id}}" class="btn btn-secondary">Editar Nota</a>
                   </div>
               </div>
          </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>
                        No hay notas creados todavia
                    </p><br>
                    <a href="/blocs/add" class="btn btn-secondary">
                        Crea uno
                    </a>
                </div>
            </div>
        {{/each}}

    </div>
</div>